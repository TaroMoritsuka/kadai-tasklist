<h1>タスク一覧</h1>
<% if @tasks.any? %>
<table class="table table-striped">
  <tr>
    <th>id</th>
    <th>タスク</th>
    <th>実施状況</th>
  </tr>
  <body>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
    <% end %>
  </body>
</table>
<div>
  <%= paginate @tasks %>
</div>
<% end %>
<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>