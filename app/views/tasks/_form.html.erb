<%= form_for(task) do |f| %>
  
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <div class="form-group">
      <%= f.label :content, 'タスク' %>
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :status, '実施状況' %>
  <%= f.select :status, [["済", "済"], ["未済", "未済"]], :prompt => "選択してください" %>
</div>

  <%= f.submit '登録', class: "btn btn-primary" %>
<% end %>